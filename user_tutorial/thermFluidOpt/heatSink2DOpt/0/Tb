FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      Ta;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 0;
    }
    outlet
    {
       type             groovyBC;
       variables "k=DT;h=U&normal();Tinf=0;f=1/(1+k/(h*mag(delta())));";
       valueExpression  "Tinf";
       gradientExpression "0";
       fractionExpression "f";
       value           uniform 0;
    }
    wall
    {
        type            zeroGradient;   
    }
    right
    {
        type            symmetry;
    }
    frontAndBack
    {
        type            empty;
    }

}

